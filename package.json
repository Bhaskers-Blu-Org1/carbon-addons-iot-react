{
  "name": "carbon-addons-iot-react",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/IBM/carbon-addons-iot-react.git"
  },
  "license": "Apache-2",
  "files": ["lib"],
  "bugs": {
    "url": "https://github.com/IBM/carbon-addons-iot-react/issues"
  },
  "scripts": {
    "build": "babel -q -d lib src",
    "build:storybook": "build-storybook",
    "cosmos": "cosmos",
    "ci-check": "yarn format:diff && yarn test --runInBand",
    "format": "prettier --write \"**/*.{scss,css,js,jsx,md,ts}\"",
    "format:diff": "prettier --list-different \"**/*.{scss,css,js,jsx,md,ts}\"",
    "precommit": "lint-staged",
    "prepublish": "yarn build",
    "semantic-release": "semantic-release",
    "storybook": "start-storybook -p 3000",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test",
      "commit-msg": "commitlint -E $HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "prop-types": "^15.6.2",
    "react-router": "^4.3.1",
    "styled-components": "^4.1.3"
  },
  "peerDependencies": {
    "carbon-components": "^9.x",
    "carbon-components-react": "^6.x",
    "carbon-icons": "^7.x",
    "react": "^15.3.2 || ^16.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-do-expressions": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.0.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@storybook/addon-a11y": "^4.1.4",
    "@storybook/addon-actions": "^4.1.4",
    "@storybook/addon-info": "^4.1.4",
    "@storybook/addon-links": "^4.1.4",
    "@storybook/addons": "^4.1.4",
    "@storybook/react": "^4.1.4",
    "autoprefixer": "^9.4.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-styled-components": "^1.10.0",
    "css-loader": "^2.1.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.11.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-lodash": "^5.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.2",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "node-sass": "^4.11.0",
    "object-assign": "^4.1.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.15.3",
    "promise": "^8.0.2",
    "react": "^16.7.0",
    "react-cosmos": "^4.6.4",
    "react-cosmos-fetch-proxy": "^4.6.1",
    "react-cosmos-router-proxy": "^4.6.1",
    "react-dom": "^16.7.0",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "semantic-release": "^15.13.2",
    "style-loader": "^0.23.1",
    "whatwg-fetch": "^3.0.0"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "lint-staged": {
    "*.{jsx,js}": ["eslint --fix"],
    "*.{scss,css,js,md}": ["yarn format", "git add"]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/components/**/*.js?(x)",
      "!**/node_modules/**",
      "!**/lib/**",
      "!**/coverage/**"
    ],
    "coverageReporters": ["json", "lcov", "html", "text-summary"],
    "setupFiles": [
      "<rootDir>/config/polyfills.js",
      "<rootDir>/config/jest/setup.js"
    ],
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.js?(x)",
      "<rootDir>/**/?(*-)(spec|test).js?(x)"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.s?css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "testPathIgnorePatterns": ["/config/", "/lib/"],
    "transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"],
    "moduleFileExtensions": ["js", "json"],
    "snapshotSerializers": ["enzyme-to-json/serializer"]
  }
}
